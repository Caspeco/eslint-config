{
	"name": "@caspeco/eslint-config",
	"version": "5.0.0",
	"private": true,
	"homepage": "https://github.com/Caspeco/eslint-config#readme",
	"bugs": {
		"url": "https://github.com/Caspeco/eslint-config/issues"
	},
	"repository": {
		"url": "https://github.com/Caspeco/eslint-config"
	},
	"license": "MIT",
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"ci-test": "CI=true npm run test -ws",
		"docs:preview": "docsify serve docs",
		"prettier:check": "prettier --check .",
		"prettier:fix": "prettier --write .",
		"test": "npm run test -ws",
		"test:react": "npm run test -w packages/eslint-config-react",
		"test:ts": "npm run test -w packages/eslint-config-ts",
		"tsc": "tsc",
		"update-versions": "node scripts/update-versions.ts",
		"verify-package-sort-order": "sort-package-json 'package.json' 'packages/*/package.json' --check",
		"verify-package-sort-order:fix": "sort-package-json 'package.json' 'packages/*/package.json'"
	},
	"prettier": "@caspeco/prettier-config",
	"engines": {
		"node": ">=24",
		"npm": ">=11.5.1"
	}
}
